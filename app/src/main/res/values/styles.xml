<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/banner_red</item>
        <item name="colorPrimaryDark">@color/red_actionbar</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/red_actionbar</item>
        <item name="colorControlActivated">@color/banner_red</item>
        <item name="colorControlHighlight">@color/banner_red</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <!--            <item name="android:windowLightStatusBar">true</item>-->
        <!--        <item name="android:windowBackground">@android:color/white</item>-->

    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ClickableTextView">
        <item name="colorControlHighlight">@color/banner_red</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="PrimaryButtonRed" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:padding">@dimen/dp_15</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="colorPrimary">@color/banner_red</item>
        <item name="colorAccent">@color/banner_red</item>
    </style>

    <style name="ClickableViewWhite">
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CommonRedButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingHorizontal">@dimen/dp_30</item>
        <item name="android:backgroundTint">@color/red_CC252C</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
</resources>