<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/semi_transparent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:src="@drawable/close"
            android:theme="@style/ClickableViewWhite" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/semi_bold"
            android:text="@string/Menu"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ivAboutUs"
        style="@style/MenuFragmentTextView"
        android:drawableStart="@drawable/aboutus"
        android:text="@string/About_Us" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ivRateUs"
        style="@style/MenuFragmentTextView"
        android:drawableStart="@drawable/rateus"
        android:text="@string/Rate_Us" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ivShareApp"
        style="@style/MenuFragmentTextView"
        android:drawableStart="@drawable/share_app"
        android:text="@string/Share_App" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ivTNC"
        style="@style/MenuFragmentTextView"
        android:drawableStart="@drawable/tnc"
        android:text="@string/Terms_Of_Use" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContactUs"
        style="@style/MenuFragmentTextView"
        android:drawableStart="@drawable/contact"
        android:text="@string/Contact_Us" />

<!--    <androidx.appcompat.widget.AppCompatTextView-->
<!--        android:id="@+id/tvLogout"-->
<!--        style="@style/MenuFragmentTextView"-->
<!--        android:text="@string/Logout" />-->
</androidx.appcompat.widget.LinearLayoutCompat>