<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    tools:context=".ui.activity.GovtWorkActivity">

    <include layout="@layout/common_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <WebView
                android:id="@+id/wbMap"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                tools:ignore="WebViewLayout" />

            <ProgressBar
                android:id="@+id/pbContactUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:indeterminateTint="@color/red_light"
                android:indeterminateTintMode="multiply"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvContactUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                app:cardElevation="@dimen/dp_0">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_30">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semi_bold"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:paddingVertical="@dimen/dp_2"
                        android:text="Address :"
                        android:textColor="@color/red_CC252C"
                        android:textSize="@dimen/sp_14" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semi_bold"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:paddingVertical="@dimen/dp_2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:text="COLORS OF GUJARAT" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:paddingVertical="@dimen/dp_2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12"
                        tools:text="208, GURURAKSHA COMPLEX, NEAR SBI BANK, TAGORE ROAD, VIRANI CHOWK, RAJKOT - 360002 (GUJARAT)" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@color/gray" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semi_bold"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:paddingVertical="@dimen/dp_2"
                        android:text="Make A Call :"
                        android:textColor="@color/red_CC252C"
                        android:textSize="@dimen/sp_14" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semi_bold"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:paddingVertical="@dimen/dp_2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12"
                        tools:text="+91 98253 15700" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@color/gray" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semi_bold"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:paddingVertical="@dimen/dp_2"
                        android:text="Send a Message :"
                        android:textColor="@color/red_CC252C"
                        android:textSize="@dimen/sp_14" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semi_bold"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:paddingVertical="@dimen/dp_2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12"
                        tools:text="info@colorsofgujarat.in" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@color/gray_BEBEBE"
                        android:fontFamily="@font/semi_bold"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:paddingVertical="@dimen/dp_10"
                        android:text="Get In Touch"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/transparent_bg_black_border"
                        android:fontFamily="@font/regular"
                        android:hint="@string/Name"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/transparent_bg_black_border"
                        android:fontFamily="@font/regular"
                        android:hint="@string/Email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/transparent_bg_black_border"
                        android:fontFamily="@font/regular"
                        android:hint="@string/Mobile_No"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned"
                        android:maxLength="10"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etSuggestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/transparent_bg_black_border"
                        android:fontFamily="@font/regular"
                        android:gravity="start"
                        android:hint="@string/quest_comment"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:minLines="5"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btSendContactUs"
                            style="@style/CommonRedButton"
                            android:layout_margin="@dimen/dp_0"
                            android:paddingHorizontal="@dimen/sp_30"
                            android:text="@string/Send"
                            android:textAllCaps="false"
                            android:textSize="@dimen/sp_14"
                            tools:ignore="MissingConstraints" />

                        <androidx.core.widget.ContentLoadingProgressBar
                            android:id="@+id/pbSendContactUs"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:indeterminateTint="@color/red_light"
                            android:indeterminateTintMode="multiply"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/btSendContactUs"
                            app:layout_constraintEnd_toEndOf="@+id/btSendContactUs"
                            app:layout_constraintStart_toStartOf="@+id/btSendContactUs"
                            app:layout_constraintTop_toTopOf="@+id/btSendContactUs" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>