<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    tools:context=".ui.activity.GovtWorkActivity">

    <include layout="@layout/common_toolbar" />

    <ProgressBar
        android:id="@+id/pbNewsPortal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminateTint="@color/red_light"
        android:indeterminateTintMode="multiply"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRootGovtWorkNewsItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        app:cardElevation="@dimen/dp_0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvQuestionSuggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="ભારતના કયા પ્રધાનમંત્રી રાષ્ટ્રીય સ્વયંસેવક સંઘના સદસ્ય પણ છે ?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgDharasabhyaReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbExcellent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:checked="true"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="@dimen/dp_5"
                        android:text="ગુલઝારી લાલા નંદા"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <RadioButton
                        android:id="@+id/rbGood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="@dimen/dp_5"
                        android:text="ચૌધરી ચરણસિંહ"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <RadioButton
                        android:id="@+id/rbcantAnswer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="@dimen/dp_5"
                        android:text="નરેન્દ્ર મોદી"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <RadioButton
                        android:id="@+id/rbBad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="@dimen/dp_5"
                        android:text="ડો. મનમોહન સિંહ"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </RadioGroup>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btSubmitRegister"
                        style="@style/CommonRedButton"
                        android:layout_margin="@dimen/dp_0"
                        android:paddingHorizontal="@dimen/sp_20"
                        android:text="@string/submit"
                        android:textSize="@dimen/sp_16"
                        app:cornerRadius="@dimen/dp_5" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvGive_rate_get_10_point"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="8"
                        android:padding="@dimen/dp_5"
                        android:text="(Participate &amp; Get 10 points / Win Prize)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:paddingVertical="@dimen/dp_5"
                            android:src="@drawable/share_icon_2" />
                    </FrameLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_300" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>