<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvRootGovtWorkNewsItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:padding="@dimen/dp_10"
    app:cardElevation="@dimen/dp_0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/ivQuestionSuggestionUser"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/user1"
                app:cornerRadius="@dimen/dp_100" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvQuestionSuggestionUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:paddingHorizontal="@dimen/dp_2"
                    tools:text="રાજદીપસિંહ સોલંકી"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvUserCityDistrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:paddingHorizontal="@dimen/dp_2"
                    tools:text="ધોળકા - અહમદાબાદ"
                    android:textColor="@color/gray_candidate_name"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvQuestionSuggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            android:paddingVertical="@dimen/dp_7"
            tools:text="કોર્પોરેશનની ફરિયાદોનો નિકાલ સમયમાં થતો નર્થીીં...."
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <com.rishabhharit.roundedimageview.RoundedImageView
            android:id="@+id/ivQuestionSuggestion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_news_image"
            app:cornerRadius="@dimen/dp_5" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivShareQuestionSuggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            android:src="@drawable/share_icon_2" />
    </LinearLayout>
</androidx.cardview.widget.CardView>